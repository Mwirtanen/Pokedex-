<div class="profile">
<h2 class="header">Profile <br>
    <%= currentUser.username %>
</h2>
<div class="user">
    <table class="table">
        <tr>
            <th>Username:</th>
            <td>
                <%= currentUser.username %>
            </td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>
                <%= currentUser.email %>
            </td>
        </tr>
        <%= currentUser.pokemons %>
    </table>
</div>
<div class="buttons">
    <div class="button">
        <button>
            <a href="<%=`/edit`%>">
                Edit User Details
            </a>
        </button>
    </div>
    <div class="button">
        <button>
            <a  href="<%= `/users/${currentUser._id}/delete?_method=DELETE` %>"
                onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
        </button>
    </div>
</div>
</div>
<div class="pokemons">
    <h1>My Pokemons</h1>
    <p>Lists all pokemons of the user...</p>
</div>